/**index.wxss**/
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.motto-title{
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
}

.user-motto{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
}

.section-date{
  margin: 10px;
  color: #616161;
  font-size: 16px;
  font-style:oblique;
  line-height: 18px
}

.user-motto-en {
  margin: 10px;
  color: #616161;
  font-size: 16px;
  font-style:oblique;
  line-height: 18px
}

.user-motto-read{
  margin: 10px;
  color: #00b0ff;
  font-size: 16px;
  font-style:oblique;
  line-height: 18px
}

.user-motto-zh {
  margin-left: 10px;
  margin-right: 10px;
  color: #616161;
  font-size: 12px;
}

.user-motto-author {
  margin: 10px;
  color: #424242;
  font-size: 13px;
}

.daily-talk-bg{
  width: 100%;
  height: 380rpx;
  border-radius: 2%;
}

